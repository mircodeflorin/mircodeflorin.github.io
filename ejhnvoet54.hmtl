    <script>
        // Manage audio player functionality
        let currentlyPlaying = null;
        
        function togglePlay(audioId) {
            const audio = document.getElementById(audioId);
            const button = document.querySelector(`[onclick="togglePlay('${audioId}')"]`);
            
            // If a different audio is currently playing, pause it first
            if (currentlyPlaying && currentlyPlaying !== audio) {
                currentlyPlaying.pause();
                document.querySelectorAll('.play-button').forEach(btn => {
                    btn.textContent = '‚ñ∂';
                });
            }
            
            // Toggle play/pause for the selected audio
            if (audio.paused) {
                audio.play();
                button.textContent = '‚ùö‚ùö';
                currentlyPlaying = audio;
            } else {
                audio.pause();
                button.textContent = '‚ñ∂';
                currentlyPlaying = null;
            }
        }
        
        // Update time display when audio is playing
        document.querySelectorAll('audio').forEach((audio, index) => {
            const playerIndex = index + 1;
            const timeDisplay = document.querySelector(`.podcast-container:nth-child(${playerIndex}) .podcast-time`);
            const progressBar = document.querySelector(`.podcast-container:nth-child(${playerIndex}) .podcast-progress`);
            
            audio.addEventListener('timeupdate', function() {
                const currentMin = Math.floor(audio.currentTime / 60);
                const currentSec = Math.floor(audio.currentTime % 60).toString().padStart(2, '0');
                const durationMin = Math.floor(audio.duration / 60);
                const durationSec = Math.floor(audio.duration % 60).toString().padStart(2, '0');
                
                if (!isNaN(audio.duration)) {
                    timeDisplay.textContent = `${currentMin}:${currentSec} / ${durationMin}:${durationSec}`;
                    
                    // Update progress bar position
                    const progressPercentage = (audio.currentTime / audio.duration) * 100;
                    progressBar.style.setProperty('--progress', `${progressPercentage}%`);
                }
            });
            
            // Reset when audio ends
            audio.addEventListener('ended', function() {
                const button = document.querySelector(`[onclick="togglePlay('podcast${playerIndex}')"]`);
                button.textContent = '‚ñ∂';
                currentlyPlaying = null;
            });
        });
    </script>
